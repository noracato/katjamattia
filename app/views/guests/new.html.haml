= simple_form_for @guest do |f|
  = f.input :name, input_html: { class: 'form-control-lg' }, grid_wrapper_html: { class: 'col-sm-6 '}
  = f.number_field :points, input_html: { class: 'form-control-lg' }, grid_wrapper_html: { class: 'col-sm-6 '}

  = f.button :submit,  class: 'btn btn-success btn-lg' do
    Save Person
  = link_to('Cancel', guests_path, class: 'ms-2 btn btn-lg btn-light text-muted')
